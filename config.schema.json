{
  "pluginAlias": "SharkIQ",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "SharkIQ"
      },
      "email": {
        "title": "SharkClean Account Email",
        "type": "string",
        "required": false
      },
      "password": {
        "title": "SharkClean Account Password",
        "type": "string",
        "required": false
      },
      "oAuthCode": {
        "title": "SharkClean OAuth Code",
        "type": "string",
        "required": false
      },
      "vacuums": {
        "title": "SharkClean Vacuum Devicess",
        "type": "array",
        "required": true,
        "items": {
          "title": "SharkClean DSN",
          "type": "string"
        }
      },
      "europe": {
        "title": "SharkClean European Server",
        "type": "boolean",
        "required": false,
        "default": false
      },
      "invertDockedStatus": {
        "title": "Invert Vacuum Docked Status",
        "type": "boolean",
        "required": false,
        "default": false
      },
      "dockedUpdateInterval": {
        "title": "Docked Update Interval",
        "type": "integer",
        "required": false,
        "default": 30000
      }
    }
  },
  "layout": [
    {
      "type": "fieldset",
      "title": "SharkIQ Account Info",
      "expandable": true,
      "expanded": true,
      "items": [
        "email",
        "password"
      ]
    },
    {
      "type": "fieldset",
      "title": "SharkIQ OAuth Info",
      "expandable": true,
      "expanded": false,
      "items": [
        {
          "type": "help",
          "helpvalue": "<h5>OAuth Code</h5><em class='primary-text'>Enter the OAuth code you received from SharkClean. This is used for manually obtaining credentials.</em>"
        },
        "oAuthCode"
      ]
    },
    {
      "type": "fieldset",
      "title": "Vacuum Settings",
      "expandable": true,
      "expanded": true,
      "items": [
        {
          "type": "help",
          "helpvalue": "<h5>Vacuums</h5><em class='primary-text'>Enter SharkClean DSN(s) you want to add to HomeKit.</em>"
        },
        {
          "key": "vacuums",
          "notitle": true,
          "type": "tabarray",
          "title": "{{ 'New Vacuum' }}",
          "expandable": true,
          "expanded": false,
          "orderable": true,
          "items": [
            {
              "key": "vacuums[]",
              "title": "{{ value || 'New DSN' }}"
            }
          ]
        },
        "europe",
        "invertDockedStatus",
        "dockedUpdateInterval"
      ]
    }
  ]
}