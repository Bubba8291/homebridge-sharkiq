{
  "pluginAlias": "SharkIQ",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "title": "Name",
        "default": "SharkIQ"
      },
      "email": {
        "title": "SharkClean Account Email",
        "type": "string",
        "required": true
      },
      "password": {
        "title": "SharkClean Account Password",
        "type": "string",
        "required": true
      },
      "vacuums": {
        "title": "SharkClean Vacuum Devicess",
        "type": "array",
        "required": true,
        "items": {
          "type": "string"
        }
      }
    }
  },
  "layout": [
    {
      "type": "fieldset",
      "title": "SharkIQ Account Info",
      "expandable": true,
      "expanded": false,
      "items": [
        "email",
        "password"
      ]
    },
    {
      "type": "fieldset",
      "title": "Vacuum Settings",
      "expandable": true,
      "expanded": false,
      "items": [
        {
          "key": "vacuums",
          "notitle": true,
          "type": "tabarray",
          "title": "{{ 'New Vacuum' }}",
          "expandable": true,
          "expanded": false,
          "orderable": true,
          "items": [
            {
              "key": "vacuums[]",
              "title": "{{ value }}"
            }
          ]
        }
      ]
    }
  ]
}